<!DOCTYPE html>
<html lang="en">
    <%- include('./components/head') %>
    <body>
        <%- include('./components/navbar') %>
        <div class="m-4">

        <h1 class="text-center m-4">Program Outline</h1>

        <div class="container mt-4">
            <ul class="list-group">
                <li class="list-group-item">
                   <a href="./../Files/dispatchTrackTechPlan.pdf" data-bs-toggle="modal" data-bs-target="#pdfModal" onclick="setPdfSrc(this)">
                    Dispatch Track Aviation Technology Academic Plan</a>
                </li>
                <li class="list-group-item">
                    <a href="./../Files/ATCTrack.pdf" data-bs-toggle="modal" data-bs-target="#pdfModal" onclick="setPdfSrc(this)">
                        Air Track Control Track Aviation Technology Academic Plan</a>
                </li>
                <li class="list-group-item">
                    <a href="./../Files/AviationManagement.pdf" data-bs-toggle="modal" data-bs-target="#pdfModal" onclick="setPdfSrc(this)">
                        Aviation Management Aviation Technology Academic Plan</a>
                </li>
                <li class="list-group-item">
                    <a href="./../Files/pilotTrack.pdf" data-bs-toggle="modal" data-bs-target="#pdfModal" onclick="setPdfSrc(this)">Pilot Track Aviation Technology Academic Plan</a>
                </li>
                <li class="list-group-item">
                    <a href="./../Files/BASAnnualSchedule.pdf" data-bs-toggle="modal" data-bs-target="#pdfModal" onclick="setPdfSrc(this)">BAS Annual Schedule</a>
                </li>
            </ul>
        </div>

        <!-- Bootstrap Modal -->
        <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearPdfSrc()"></button>
                    </div>
                    <div class="modal-body">
                        <iframe src="" width="100%" height="700px" id="pdfViewer"></iframe>
                    </div>
                </div>
            </div>
            <!-- end  of the list -->
            <!-- Footer -->
        </div>

        <!-- JavaScript to handle the PDF loading -->
        <script>
            // Set the src of the iframe based on the clicked link
            function setPdfSrc(link) {
                const pdfUrl = link.href; // Get the href of the clicked link
                document.getElementById("pdfViewer").src = pdfUrl; // Set the iframe src to the PDF URL
            }

            // Clear the iframe src when modal is closed
            function clearPdfSrc() {
                document.getElementById("pdfViewer").src = ''; // Clear the iframe src
            }
        </script>
        <!-- End of the script  -->
    </body>
</html>